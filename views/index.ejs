<!DOCTYPE html>
<head>
    <title>ANDO</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://www.gstatic.com/firebasejs/5.5.0/firebase.js"></script>
    <script src="https://cdn.firebase.com/libs/firebaseui/3.1.1/firebaseui.js"></script>
    <script src="/scripts/firebase.js" type="text/javascript"></script>
    <script src="/scripts/index.js" type="text/javascript"></script>
    <link type="text/css" rel="stylesheet" href="https://cdn.firebase.com/libs/firebaseui/3.1.1/firebaseui.css" />
</head>
<body>

<div id="firebaseui-auth-container"></div>

<form method="post" action="/service">
    <input type="button" value="Sign in" onclick="signin()">
    <input type="hidden" id="userid" name="userid">
    <label for="city">Select City</label>
    <select name="selectcity" id="selectcity">
        <option value="Gugaon">Gurgaon</option>
        <option value="Noida">Noida</option>
        <option value="Delhi">Delhi</option>
    </select>
    <label for="Brand">Select Brand:</label>
    <select name="selectbrand" id="selectbrand" onchange="updateUrlpbrand(this.value)">
        <option value="Select-Brand">Select-Brand</option>
        <option value="Apple">Apple</option>
        <option value="Assus">Assus</option>
        <option value="Gionee">Gionee</option>
        <option value="Huawei">Huawei</option>
        <option value="Leeco">Leeco</option>
        <option value="Lenovo">Lenovo</option>
        <option value="Motorola">Motorola</option>
        <option value="Nexus">Nexus</option>
        <option value="Oneplus">One plus</option>
        <option value="Oppo">Oppo</option>
        <option value="Samsung">Samsung</option>
        <option value="Vivo">Vivo</option>
        <option value="Xiaomi">Xiaomi</option>
    </select>
    <label for="Model">Select Model:</label>
    <select disabled name="selectmodel" id="selectmodel" onchange="updateUrlpmodel(this.value)">
        <option>Select-Model</option>
        <% if(model != null){ 
            for(var value in model){ %>
                <option value=<%- modelkey[value] %>><%- JSON.stringify(model[value]) %></option>
            <% }  
        }%>
    </select>
    <label for="screencolor">Screen Color:</label>
    <select name="screencolor" id="screencolor">
        <option value="Black">Black</option>
        <option value="Blue">Blue</option>
        <option value="Gold">Gold</option>
        <option value="Grey">Grey</option>
        <option value="Silver">Silver</option>
        <option value="White">White</option>
    </select>
    <label for="faults">Faults you are facing:</label>
    <select name="faults" id="faults">
        <option value="Touch">Touch/Display</option>
        <option value="Battery">Battery</option>
        <option value="Camera">Camera</option>
        <option value="Charging">Charging</option>
        <option value="Speaker">Speaker</option>
        <option value="Dead">Dead</option>
        <option value="Others">Others</option>
        <option value="Temperedglass">Tempered Glass</option>
    </select>
    <input type="submit" value="submit" onclick="idToken()">
</form>
<script>
$(document).ready(function(){
    if(!localStorage.getItem('pmodel')){
       if(!localStorage.getItem('pbrand')){
           console.log("no brand no model");
       }
       else{
        $('#selectbrand').val(localStorage.getItem('pbrand'));
        console.log(localStorage.getItem('pbrand'));
       }
    }
    else{
        $('#selectbrand').val(localStorage.getItem('pbrand'));
        $('#selectmodel').val(localStorage.getItem('pmodel'));
        console.log("boht set" + localStorage.getItem('pmodel'));
        localStorage.clear();
    }
    if($('#selectbrand').val()!='Select-Brand'){
        $('#selectmodel').removeAttr('disabled');
    }
});
</script>
    
</body>
</html>